<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Ideas Matter</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <!-- Public navigation items -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Authenticated user navigation -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard">
                        <span class="fas fa-tachometer-alt" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="new-idea">
                        <span class="fas fa-plus-square" aria-hidden="true"></span> New Idea
                    </NavLink>
                </div>

                <!-- Admin navigation -->
                <AuthorizeView Policy="AdminOnly">
                    <Authorized Context="adminContext">
                        <div class="nav-section-header">
                            <span class="nav-section-title">Administration</span>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/users">
                                <span class="fas fa-users" aria-hidden="true"></span> User Management
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/settings">
                                <span class="fas fa-cogs" aria-hidden="true"></span> System Settings
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </Authorized>

            <!-- Guest navigation -->
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="fas fa-sign-in-alt" aria-hidden="true"></span> Login
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="fas fa-user-plus" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

