@inject Jackson.Ideas.Web.Services.NavigationState NavigationState
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" @onclick="@(() => NavigationState.NavigateTo("home"))" style="cursor: pointer;">Ideas Matter</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <!-- Public navigation items -->
        <div class="nav-item px-3">
            <a class="nav-link @(NavigationState.IsCurrentPage("home") ? "active" : "")" 
               @onclick="@(() => NavigationState.NavigateTo("home"))" 
               style="cursor: pointer;">
                <span class="fas fa-home" aria-hidden="true"></span> Home
            </a>
        </div>

        <!-- Authenticated user navigation -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <a class="nav-link @(NavigationState.IsCurrentPage("dashboard") ? "active" : "")" 
                       @onclick="@(() => NavigationState.NavigateTo("dashboard"))" 
                       style="cursor: pointer;">
                        <span class="fas fa-tachometer-alt" aria-hidden="true"></span> Dashboard
                    </a>
                </div>

                <div class="nav-item px-3">
                    <a class="nav-link @(NavigationState.IsCurrentPage("new-idea") ? "active" : "")" 
                       @onclick="@(() => NavigationState.NavigateTo("new-idea"))" 
                       style="cursor: pointer;">
                        <span class="fas fa-plus-square" aria-hidden="true"></span> New Idea
                    </a>
                </div>

                <div class="nav-item px-3">
                    <a class="nav-link @(NavigationState.IsCurrentPage("profile") ? "active" : "")" 
                       @onclick="@(() => NavigationState.NavigateTo("profile"))" 
                       style="cursor: pointer;">
                        <span class="fas fa-user" aria-hidden="true"></span> Profile
                    </a>
                </div>
            </Authorized>

            <!-- Guest navigation -->
            <NotAuthorized>
                <div class="nav-item px-3">
                    <a class="nav-link @(NavigationState.IsCurrentPage("login") ? "active" : "")" 
                       @onclick="@(() => NavigationState.NavigateTo("login"))" 
                       style="cursor: pointer;">
                        <span class="fas fa-sign-in-alt" aria-hidden="true"></span> Login
                    </a>
                </div>

                <div class="nav-item px-3">
                    <a class="nav-link @(NavigationState.IsCurrentPage("register") ? "active" : "")" 
                       @onclick="@(() => NavigationState.NavigateTo("register"))" 
                       style="cursor: pointer;">
                        <span class="fas fa-user-plus" aria-hidden="true"></span> Register
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        NavigationState.OnNavigationChanged += OnNavigationChanged;
    }

    private void OnNavigationChanged(string page)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        NavigationState.OnNavigationChanged -= OnNavigationChanged;
    }
}

