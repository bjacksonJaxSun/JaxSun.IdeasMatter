@inherits LayoutComponentBase

<div class="mock-environment-banner">
    <div class="container">
        <span class="badge bg-warning text-dark me-2">DEMO MODE</span>
        <small>This is a fully functional mock environment demonstrating Ideas Matter capabilities</small>
    </div>
</div>

<div class="page">
    <nav class="sidebar">
        <NavMenu />
    </nav>

    <main>
        <div class="top-row px-4">
            <span class="text-muted">Ideas Matter - Mock Environment</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .mock-environment-banner {
        background: linear-gradient(90deg, #ffc107, #fd7e14);
        color: #000;
        padding: 8px 0;
        text-align: center;
        font-weight: 500;
    }

    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .sidebar {
        background-color: #343a40;
        width: 260px;
        height: calc(100vh - 40px);
        position: fixed;
        top: 40px;
        left: 0;
        z-index: 1000;
        overflow-y: auto;
    }

    main {
        flex: 1;
        margin-left: 260px;
        margin-top: 40px;
    }

    .top-row {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .content {
        padding-top: 1.1rem;
    }
</style>