@page "/dashboard"
@using Jackson.Ideas.Mock.Services.Interfaces
@using Jackson.Ideas.Mock.Models
@inject IMockDataService MockDataService
@inject NavigationManager Navigation

<PageTitle>Dashboard - Ideas Matter Demo</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="dashboard-title">
                <span class="stat-icon me-3">ðŸ“Š</span>
                Dashboard
            </h1>
            <p class="text-muted">Welcome to your Ideas Matter demo dashboard.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="stat-icon">ðŸ’¡</div>
                <div class="stat-content">
                    <h3 class="stat-number">@scenarios.Count</h3>
                    <p class="stat-label">Business Ideas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="stat-icon">ðŸ“ˆ</div>
                <div class="stat-content">
                    <h3 class="stat-number">15</h3>
                    <p class="stat-label">Market Reports</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="stat-icon">ðŸ’°</div>
                <div class="stat-content">
                    <h3 class="stat-number">8</h3>
                    <p class="stat-label">Financial Models</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="stat-icon">ðŸ‘¤</div>
                <div class="stat-content">
                    <h3 class="stat-number">1</h3>
                    <p class="stat-label">Active Users</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="action-card">
                <div class="card-header-gradient">
                    <h5 class="mb-0 text-white">Business Scenarios</h5>
                </div>
                <div class="card-body">
                    <p>Total scenarios available: @scenarios.Count</p>
                    <button class="btn-new-idea" @onclick="NavigateToScenarios">
                        <span class="me-2">ðŸ’¡</span>
                        View All Scenarios
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="action-card">
                <div class="card-header-gradient">
                    <h5 class="mb-0 text-white">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn-action primary-action" @onclick="NavigateToMarketResearch">
                            <span class="me-2">ðŸ“ˆ</span>Market Research
                        </button>
                        <button class="btn-action success-action" @onclick="NavigateToFinancialProjections">
                            <span class="me-2">ðŸ’°</span>Financial Projections
                        </button>
                        <button class="btn-action info-action" @onclick="NavigateToUserProfile">
                            <span class="me-2">ðŸ‘¤</span>User Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (scenarios.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="featured-card">
                    <div class="card-header-gradient">
                        <h5 class="mb-0 text-white">Featured Scenarios</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var scenario in scenarios.Take(3))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="scenario-card">
                                        <div class="card-body">
                                            <h6 class="card-title">@scenario.Name</h6>
                                            <p class="card-text">@GetShortDescription(scenario.Description)</p>
                                            <small class="industry-badge">@scenario.Industry</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BusinessIdeaScenario> scenarios = new();

    protected override async Task OnInitializedAsync()
    {
        scenarios = await MockDataService.GetAllScenariosAsync();
    }

    private void NavigateToScenarios()
    {
        Navigation.NavigateTo("/scenarios");
    }

    private void NavigateToMarketResearch()
    {
        Navigation.NavigateTo("/market-research");
    }

    private void NavigateToFinancialProjections()
    {
        Navigation.NavigateTo("/financial-projections");
    }

    private void NavigateToUserProfile()
    {
        Navigation.NavigateTo("/user-profile");
    }

    private string GetShortDescription(string description)
    {
        if (string.IsNullOrEmpty(description))
            return "No description available";
        
        return description.Length > 80 ? 
            description.Substring(0, 80) + "..." : 
            description;
    }
}

