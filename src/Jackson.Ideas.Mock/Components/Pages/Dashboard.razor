@code {
    private BusinessIdeaScenario scenario = new();
    private List<ActionItem> actionItems = new();
    private int businessHealthScore = 8;

    protected override void OnInitialized()
    {
        // Load mock scenario data
        LoadMockScenario();
        
        // Generate actionable steps
        actionItems = TranslationService.CreateActionableSteps(scenario);
    }

    private void LoadMockScenario()
    {
        scenario = new BusinessIdeaScenario
        {
            Title = "Eco-Friendly Food Delivery",
            Description = "Sustainable food delivery service using electric bikes and biodegradable packaging",
            MarketSize = 250000,
            CompetitionLevel = "Medium",
            StartupCost = 15000,
            MarketResearch = new MarketResearchData
            {
                Industry = "Food Delivery"
            },
            FinancialProjections = new Models.FinancialProjections()
            {
                Revenue = new Models.RevenueProjections() { Year1Total = 180000 },
                CashFlow = new Models.CashFlowProjections() { BreakEvenMonth = 8 }
            }
        };

        // Calculate health score based on scenario
        businessHealthScore = CalculateHealthScore();
    }

    private int CalculateHealthScore()
    {
        var score = 5; // Base score

        // Market size factor
        if (scenario.MarketSize > 200000) score++;
        if (scenario.MarketSize > 500000) score++;

        // Competition factor
        if (scenario.CompetitionLevel == "Low") score++;
        if (scenario.CompetitionLevel == "Medium") score += 0;
        if (scenario.CompetitionLevel == "High") score -= 1;

        // Financial viability
        var revenueToStartupRatio = (double)scenario.FinancialProjections.Revenue.Year1Total / (double)scenario.StartupCost;
        if (revenueToStartupRatio > 10) score += 2;
        else if (revenueToStartupRatio > 5) score += 1;

        // Break-even timeline
        if (scenario.FinancialProjections.CashFlow.BreakEvenMonth <= 6) score++;
        if (scenario.FinancialProjections.CashFlow.BreakEvenMonth <= 12) score += 0;
        if (scenario.FinancialProjections.CashFlow.BreakEvenMonth > 18) score--;

        return Math.Max(1, Math.Min(10, score));
    }

    private string GetScoreClass()
    {
        return businessHealthScore switch
        {
            var score when score >= 8 => "excellent",
            var score when score >= 6 => "good",
            var score when score >= 4 => "fair",
            _ => "needs-work"
        };
    }

    private string GetScoreEmoji()
    {
        return businessHealthScore switch
        {
            var score when score >= 8 => "ðŸŸ¢",
            var score when score >= 6 => "ðŸŸ¡",
            var score when score >= 4 => "ðŸŸ ",
            _ => "ðŸ”´"
        };
    }

    private string GetScoreText()
    {
        return businessHealthScore switch
        {
            var score when score >= 8 => "Great idea!",
            var score when score >= 6 => "Good potential!",
            var score when score >= 4 => "Needs some work",
            _ => "Risky, but possible"
        };
    }

    private string GetScoreDescription()
    {
        return businessHealthScore switch
        {
            var score when score >= 8 => "Your idea has excellent potential! Most of the key factors are in your favor, and this could be a really successful business.",
            var score when score >= 6 => "Your idea shows good promise! There are some challenges to work through, but the fundamentals look solid.",
            var score when score >= 4 => "Your idea has potential, but needs some refinement. Don't worry - we'll help you identify the areas to improve!",
            _ => "Your idea faces some challenges, but that doesn't mean it can't work. Many successful businesses started with tough odds!"
        };
    }

    private string GetMarketInsight() => scenario.CompetitionLevel switch
    {
        "Low" => "Great news! You're entering a market with lots of hungry customers but not many solutions. This gives you a fantastic opportunity to capture market share quickly.",
        "Medium" => "Perfect timing! There's proven demand (that's why others are here too), but there's still plenty of room for a business that does things better.",
        "High" => "While the market is competitive, this actually proves there's real money to be made here. Your job is to find what makes you special!",
        _ => "The market looks promising for your type of business!"
    };

    private string GetRevenueInsight()
    {
        return scenario.FinancialProjections.Revenue.Year1Total switch
        {
            var revenue when revenue > 200000 => "Wow! Based on similar businesses, you could potentially earn over $200k in your first year. That's life-changing money!",
            var revenue when revenue > 100000 => "Excellent potential! You could realistically make six figures in your first year if you execute well. That's a real business!",
            var revenue when revenue > 50000 => "Great supplemental income potential! You could earn $50k+ annually, which could replace a part-time job or boost your current income significantly.",
            _ => "While the initial revenue might be modest, remember that many billion-dollar companies started small and grew over time!"
        };
    }

    private string GetCompetitionInsight() => scenario.CompetitionLevel switch
    {
        "Low" => "You're in a great position! With low competition, you can establish yourself as the go-to solution and build customer loyalty before others catch on.",
        "Medium" => "This is actually ideal! The competition proves customers want solutions like yours, but there's still room for you to find your unique angle and capture market share.",
        "High" => "Don't let the competition discourage you! High competition means there's real money being made. Your opportunity is to identify what customers aren't getting from existing solutions.",
        _ => "Every market has its opportunities - we'll help you find yours!"
    };

    private string GetStartupInsight()
    {
        return scenario.StartupCost switch
        {
            var cost when cost < 5000 => "Amazing! Your startup costs are really manageable. Many people spend more than this on a vacation, but you're investing in your future!",
            var cost when cost < 20000 => "Your startup costs are reasonable and typical for this type of business. Consider it an investment in building something that could change your financial future!",
            var cost when cost < 50000 => "While your startup costs are significant, remember you're building a real business with serious earning potential. Many successful entrepreneurs started with similar investments.",
            _ => "Yes, the startup costs are substantial, but you're building something with the potential for significant returns. Consider exploring funding options!"
        };
    }

    private void NavigateToBusinessPlan() => Navigation.NavigateTo("/business-plan");
    private void NavigateToActionPlan() => Navigation.NavigateTo("/action-plan");
    private void NavigateHome() => Navigation.NavigateTo("/");
}

