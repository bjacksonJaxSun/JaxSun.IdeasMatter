    gap: 12px;
}

.action-button {
    background: #f7fafc;
    border: 1px solid #e2e8f0;
    padding: 16px 20px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #4a5568;
    font-weight: 500;
    font-size: 14px;
}

.action-button:hover {
