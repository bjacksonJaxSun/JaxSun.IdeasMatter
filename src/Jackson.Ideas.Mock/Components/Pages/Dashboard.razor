}

.card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px 24px;
}

.card-title {
    color: white;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}

.card-content {
    padding: 24px;
}

.card-description {
    color: #4a5568;
    margin-bottom: 20px;
    font-size: 14px;
    line-height: 1.5;
}

.primary-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
