}

.stat-icon {
    font-size: 24px;
    color: white;
}

.stat-content {
    flex: 1;
}

.stat-number {
    font-size: 36px;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
    line-height: 1;
}

.stat-label {
    color: #718096;
    margin: 4px 0 0 0;
    font-size: 14px;
    font-weight: 500;
}

