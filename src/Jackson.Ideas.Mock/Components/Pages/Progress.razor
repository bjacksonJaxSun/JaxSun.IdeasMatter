    transition: width 0.5s ease;
}

.progress-text {
    text-align: center;
    color: #4a5568;
    font-size: 16px;
    font-weight: 600;
}

/* Steps List */
.steps-list {
    background: white;
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid #e2e8f0;
}

.step-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    padding: 16px 0;
    border-bottom: 1px solid #f7fafc;
    opacity: 0.6;
