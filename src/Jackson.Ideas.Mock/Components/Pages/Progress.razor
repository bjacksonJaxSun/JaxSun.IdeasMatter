    max-width: 800px;
    margin: 0 auto;
}

/* Current Step */
.current-step {
    background: white;
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
    display: flex;
    align-items: center;
    gap: 24px;
}

.current-step .step-icon {
    font-size: 48px;
    flex-shrink: 0;
    animation: bounce 1s infinite;
}

@@keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
}

.step-content {
    flex: 1;
}

.step-title {
    font-size: 28px;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 12px 0;
    line-height: 1.2;
}

.step-description {
    font-size: 18px;
    color: #4a5568;
    line-height: 1.5;
    margin: 0 0 16px 0;
}

.step-time {
    color: #667eea;
    font-size: 16px;
    font-weight: 600;
    margin: 0;
}

/* Progress Bar */
