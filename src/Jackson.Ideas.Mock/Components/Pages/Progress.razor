}

.step-name {
    font-size: 18px;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 4px 0;
}

.step-desc {
    font-size: 14px;
    color: #718096;
    line-height: 1.5;
    margin: 0;
}

