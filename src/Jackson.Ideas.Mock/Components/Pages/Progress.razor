.encouragement-content {
    flex: 1;
}

.encouragement-title {
    font-size: 24px;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 8px 0;
}

.encouragement-message {
    font-size: 16px;
    color: #4a5568;
    line-height: 1.6;
    margin: 0;
}

/* Responsive Design */
