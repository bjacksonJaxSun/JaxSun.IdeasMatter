# Application Settings
APP_NAME="Ideas Matter"
APP_ENV=production
DEBUG=false
API_PREFIX=/api/v1

# Database Configuration
# For production, use MySQL/PostgreSQL
QUICK_LAUNCH=false
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ideas_matter_db

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security - IMPORTANT: Generate your own keys!
# Generate JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Admin emails (comma-separated) - these emails will have system admin access
ADMIN_EMAILS=admin@yourdomain.com,systemadmin@yourdomain.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AI Provider Keys (optional - can be configured in admin panel)
OPENAI_API_KEY=
CLAUDE_API_KEY=
GEMINI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Monitoring (optional)
SENTRY_DSN=
LOKI_URL=
PROMETHEUS_PORT=9090