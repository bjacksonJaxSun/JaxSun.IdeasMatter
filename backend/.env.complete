# Ideas Matter Backend Configuration

# Application Settings
APP_NAME=Ideas Matter
APP_ENV=development
DEBUG=True
API_PREFIX=/api/v1

# Quick Launch Mode (uses SQLite, bypasses Redis)
QUICK_LAUNCH=True

# Security (will be auto-generated if not provided)
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-32-chars-min
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# Database (SQLite for development when QUICK_LAUNCH=True)
DATABASE_TYPE=sqlite
DB_USERNAME=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ideas_matter_db

# Redis (not used when QUICK_LAUNCH=True)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS (allow all origins in development)
CORS_ORIGINS=["*"]

# Google OAuth
GOOGLE_CLIENT_ID=329249059487-5vouq4j4h6d60skumv9deilv62mnfdah.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=

# AI Provider APIs (optional)
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
CLAUDE_API_KEY=
GEMINI_API_KEY=

# Admin Settings
ADMIN_EMAILS=admin@example.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO