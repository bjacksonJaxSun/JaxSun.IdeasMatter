# Production Environment Configuration
# Copy this to .env and update values for production deployment

# Application Settings
APP_NAME=Ideas Matter
APP_ENV=production
DEBUG=false
API_PREFIX=/api/v1

# Quick Launch Mode (set to false for production)
QUICK_LAUNCH=false

# Database Configuration (Production)
DB_USERNAME=ideas_matter_user
DB_PASSWORD=secure_password_here
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ideas_matter_prod

# Database Configuration (Development)
# Uncomment for SQLite development
# DATABASE_URL=sqlite:///./ideas_matter.db

# Security Settings
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-minimum-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (Update for production domain)
CORS_ORIGINS=["http://localhost:3000","http://localhost:4000","https://yourdomain.com"]

# Google OAuth Configuration
GOOGLE_CLIENT_ID=329249059487-5vouq4j4h6d60skumv9deilv62mnfdah.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Redis Configuration (Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME="Ideas Matter"

# Admin Configuration
FIRST_SUPERUSER_EMAIL=admin@yourdomain.com
FIRST_SUPERUSER_PASSWORD=secure_admin_password

# File Storage
UPLOAD_PATH=uploads/
MAX_UPLOAD_SIZE=10485760

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4